{
    "compilerOptions": {
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "allowJs": true,
      "skipLibCheck": true,
      "target": "es5",
      "outDir": ".build",
      "moduleResolution": "node",
      "lib": ["es2022"],
      "rootDir": "./",
      "baseUrl": ".",
      "paths": {
      },
      "removeComments": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
  }